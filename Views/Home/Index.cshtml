@{
    ViewData["Title"] = "Contract Monthly Claim System";
}

<div class="container-fluid px-0">
    <!-- Hero Section -->
    <section class="hero-section bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-3">Welcome to CMCS</h1>
                    <p class="lead mb-4">Contract Monthly Claim System for Independent Contractor Lecturers</p>
                    <p class="mb-4">Streamline your claim submission and approval process with our intuitive, secure, and efficient platform designed specifically for academic professionals.</p>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/Identity/Account/Login" class="btn btn-light btn-lg px-4">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                            <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg px-4">
                                <i class="fas fa-user-plus me-2"></i>Register
                            </a>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("LecturerDashboard", "Home")" class="btn btn-light btn-lg px-4">
                            <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                        </a>
                    }
                </div>
                <div class="col-lg-6 text-center">
                    <div class="hero-image mt-4 mt-lg-0">
                        <i class="fas fa-file-invoice-dollar display-1 text-warning"></i>
                        <div class="mt-3">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <span>Secure Claims</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">System Features</h2>
                <p class="text-muted">Everything you need for efficient claim management</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                                <i class="fas fa-paper-plane fs-4"></i>
                            </div>
                            <h5 class="card-title">Easy Claim Submission</h5>
                            <p class="card-text">Submit your monthly claims with just a few clicks. Intuitive forms make the process quick and error-free.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                                <i class="fas fa-check-double fs-4"></i>
                            </div>
                            <h5 class="card-title">Quick Approval Process</h5>
                            <p class="card-text">Programme Coordinators and Academic Managers can review and approve claims efficiently with dedicated dashboards.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                                <i class="fas fa-file-upload fs-4"></i>
                            </div>
                            <h5 class="card-title">Document Management</h5>
                            <p class="card-text">Upload supporting documents securely. Supports PDF, DOCX, and XLSX formats with automatic validation.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mt-2">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-warning text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                                <i class="fas fa-chart-line fs-4"></i>
                            </div>
                            <h5 class="card-title">Real-time Tracking</h5>
                            <p class="card-text">Monitor your claim status in real-time. Get instant notifications when your claim moves through the approval process.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-danger text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                                <i class="fas fa-shield-alt fs-4"></i>
                            </div>
                            <h5 class="card-title">Secure & Reliable</h5>
                            <p class="card-text">Bank-level security ensures your data is protected. Regular backups and 99.9% uptime guarantee.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon bg-secondary text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                                <i class="fas fa-chart-pie fs-4"></i>
                            </div>
                            <h5 class="card-title">Comprehensive Reports</h5>
                            <p class="card-text">Generate detailed reports for accounting, auditing, and personal record-keeping. Export to multiple formats.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Portal Access Section -->
    <section class="bg-light py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Access Your Portal</h2>
                <p class="text-muted">Choose your role to access the appropriate dashboard</p>
            </div>

            <div class="row mt-5">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Lecturer Portal</h5>
                        </div>
                        <div class="card-body">
                            <div class="portal-icon mb-3">
                                <i class="fas fa-user-graduate fa-3x text-primary"></i>
                            </div>
                            <p class="card-text">Submit claims, upload documents, and track your claim status in real-time.</p>
                            <ul class="list-unstyled text-start">
                                <li><i class="fas fa-check text-success me-2"></i> Easy claim submission</li>
                                <li><i class="fas fa-check text-success me-2"></i> Document upload</li>
                                <li><i class="fas fa-check text-success me-2"></i> Status tracking</li>
                                <li><i class="fas fa-check text-success me-2"></i> Payment history</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("LecturerDashboard", "Home")" class="btn btn-primary w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Access Portal
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">Coordinator Portal</h5>
                        </div>
                        <div class="card-body">
                            <div class="portal-icon mb-3">
                                <i class="fas fa-users-cog fa-3x text-success"></i>
                            </div>
                            <p class="card-text">Review, verify, and approve claims from lecturers in your department.</p>
                            <ul class="list-unstyled text-start">
                                <li><i class="fas fa-check text-success me-2"></i> Claim verification</li>
                                <li><i class="fas fa-check text-success me-2"></i> Bulk approvals</li>
                                <li><i class="fas fa-check text-success me-2"></i> Department analytics</li>
                                <li><i class="fas fa-check text-success me-2"></i> Communication tools</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("CoordinatorDashboard", "Home")" class="btn btn-success w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Access Portal
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">Manager Portal</h5>
                        </div>
                        <div class="card-body">
                            <div class="portal-icon mb-3">
                                <i class="fas fa-chart-line fa-3x text-info"></i>
                            </div>
                            <p class="card-text">Oversight and final approval with comprehensive reporting and analytics.</p>
                            <ul class="list-unstyled text-start">
                                <li><i class="fas fa-check text-success me-2"></i> Final approval</li>
                                <li><i class="fas fa-check text-success me-2"></i> Financial reporting</li>
                                <li><i class="fas fa-check text-success me-2"></i> Performance metrics</li>
                                <li><i class="fas fa-check text-success me-2"></i> System administration</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("ManagerDashboard", "Home")" class="btn btn-info w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Access Portal
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number text-primary fw-bold display-6">1,250+</div>
                        <div class="stat-label text-muted">Claims Processed</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number text-success fw-bold display-6">98%</div>
                        <div class="stat-label text-muted">Approval Rate</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number text-info fw-bold display-6">350+</div>
                        <div class="stat-label text-muted">Active Lecturers</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-number text-warning fw-bold display-6">24/7</div>
                        <div class="stat-label text-muted">System Availability</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-dark text-white py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-3">Ready to Get Started?</h2>
            <p class="lead mb-4">Join hundreds of lecturers and administrators who trust CMCS for their claim management needs.</p>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="@Url.Action("About", "Home")" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-info-circle me-2"></i>Learn More
                </a>
                <a href="@Url.Action("Contact", "Home")" class="btn btn-primary btn-lg">
                    <i class="fas fa-envelope me-2"></i>Contact Us
                </a>
            </div>
        </div>
    </section>
</div>

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .feature-icon {
            transition: transform 0.3s ease;
        }

        .card:hover .feature-icon {
            transform: scale(1.1);
        }

        .portal-icon {
            transition: transform 0.3s ease;
        }

        .card:hover .portal-icon {
            transform: translateY(-5px);
        }

        .stat-item {
            padding: 20px;
        }

        .stat-number {
            font-weight: 700;
        }

        .hero-image i {
            font-size: 6rem;
            opacity: 0.9;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top
                    }, 1000);
                }
            });

            // Animation for stats
            $('.stat-number').each(function() {
                $(this).prop('Counter', 0).animate({
                    Counter: $(this).text()
                }, {
                    duration: 2000,
                    easing: 'swing',
                    step: function(now) {
                        $(this).text(Math.ceil(now));
                    }
                });
            });
        });
    </script>
}