@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-3">Privacy Policy</h1>
                <p class="lead text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
            </div>

            <!-- Introduction -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 text-primary mb-3">
                        <i class="fas fa-shield-alt me-2"></i>Introduction
                    </h2>
                    <p class="mb-0">
                        At Contract Monthly Claim System (CMCS), we are committed to protecting your privacy and ensuring the security of your personal information. This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you use our services.
                    </p>
                </div>
            </div>

            <!-- Information Collection -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 text-primary mb-3">
                        <i class="fas fa-database me-2"></i>Information We Collect
                    </h2>
                    <h5 class="text-success mb-2">Personal Information</h5>
                    <ul class="list-unstyled mb-4">
                        <li><i class="fas fa-check-circle text-success me-2"></i> Full name and contact details</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i> Email address and phone number</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i> Academic qualifications and employment details</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i> Banking information for payment processing</li>
                    </ul>

                    <h5 class="text-success mb-2">Usage Data</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check-circle text-success me-2"></i> IP addresses and browser information</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i> Pages visited and time spent on site</li>
                        <li><i class="fas fa-check-circle text-success me-2"></i> System usage patterns and preferences</li>
                    </ul>
                </div>
            </div>

            <!-- How We Use Your Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 text-primary mb-3">
                        <i class="fas fa-cogs me-2"></i>How We Use Your Information
                    </h2>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class="bg-primary text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold">Claim Processing</h6>
                                    <p class="text-muted small mb-0">To process and manage your monthly claims</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class="bg-success text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold">Communication</h6>
                                    <p class="text-muted small mb-0">To send important updates and notifications</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class="bg-info text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold">System Improvement</h6>
                                    <p class="text-muted small mb-0">To enhance and optimize our services</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class="bg-warning text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold">Security</h6>
                                    <p class="text-muted small mb-0">To protect against fraud and unauthorized access</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data Protection -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 text-primary mb-3">
                        <i class="fas fa-lock me-2"></i>Data Protection
                    </h2>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>We implement industry-standard security measures:</strong>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="bg-light p-3 rounded mb-3">
                                <h6 class="fw-bold text-primary">
                                    <i class="fas fa-shield-alt me-2"></i>Encryption
                                </h6>
                                <p class="mb-0 small">All data is encrypted using AES-256 encryption both in transit and at rest.</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-light p-3 rounded mb-3">
                                <h6 class="fw-bold text-primary">
                                    <i class="fas fa-user-shield me-2"></i>Access Control
                                </h6>
                                <p class="mb-0 small">Strict role-based access control ensures only authorized personnel can access sensitive data.</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="bg-light p-3 rounded mb-3">
                                <h6 class="fw-bold text-primary">
                                    <i class="fas fa-sync-alt me-2"></i>Regular Audits
                                </h6>
                                <p class="mb-0 small">Regular security audits and vulnerability assessments are conducted.</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-light p-3 rounded mb-3">
                                <h6 class="fw-bold text-primary">
                                    <i class="fas fa-database me-2"></i>Data Backup
                                </h6>
                                <p class="mb-0 small">Automatic daily backups with 30-day retention policy.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Your Rights -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 text-primary mb-3">
                        <i class="fas fa-user-check me-2"></i>Your Rights
                    </h2>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-eye"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Right to Access</h6>
                                    <p class="text-muted small mb-0">Request access to your personal data</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-success text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-edit"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Right to Rectification</h6>
                                    <p class="text-muted small mb-0">Correct inaccurate or incomplete data</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-danger text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-trash"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Right to Erasure</h6>
                                    <p class="text-muted small mb-0">Request deletion of your personal data</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-warning text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-ban"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Right to Object</h6>
                                    <p class="text-muted small mb-0">Object to processing of your data</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h2 class="h4 text-primary mb-3">
                        <i class="fas fa-headset me-2"></i>Contact Us
                    </h2>
                    <p class="mb-3">If you have any questions about this Privacy Policy, please contact us:</p>
                    <div class="d-flex justify-content-center gap-4 flex-wrap">
                        <div class="text-center">
                            <i class="fas fa-envelope fa-2x text-primary mb-2"></i>
                            <h6>Email</h6>
                            <p class="small text-muted mb-0">privacy@cmcs.example.com</p>
                        </div>
                        <div class="text-center">
                            <i class="fas fa-phone fa-2x text-success mb-2"></i>
                            <h6>Phone</h6>
                            <p class="small text-muted mb-0">+27 11 123 4567</p>
                        </div>
                        <div class="text-center">
                            <i class="fas fa-clock fa-2x text-info mb-2"></i>
                            <h6>Response Time</h6>
                            <p class="small text-muted mb-0">Within 48 hours</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Last Updated -->
            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="fas fa-info-circle me-1"></i>
                    This policy was last updated on @DateTime.Now.ToString("MMMM dd, yyyy") and may be updated periodically.
                </p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
            }

        .rounded-circle {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}
